<!-- fullwidth scrollable marquee-->
<div class="position-relative d-flex overflow-x-hidden py-lg-4 pt-4">
    <div class="animate-marquee d-flex gap-3">
  {# Create a user query with the 'group' parameter #}

{% for user in therapists %}
{% set asset = craft.assets()
.volume('userphotos')
.kind('image').one() %}

      <a href="{{ alias('@baseUrl') }}/counsellors/{{user.username|kebab}}/{{user.id}}" class="bg-white text-center shadow-sm text-wrap rounded-4 w-100 border card-lift border" style="width: 200px !important">
        <!--img-->
        <div class="p-3">
          <img src="{{ user.photo.url }}" alt="mentor 1" class="avatar avatar-xl rounded-circle">
          <!--content-->
          <div class="mt-3">
            <h3 class="mb-0 h4">{{ user.fullName }} </h3>
            <span class="text-gray-800">{{ user.titleRole }}</span>
          </div>
        </div>
      </a>
      {% endfor %}

    </div>
  </div>